<article class='post col-sm-6 col-md-4'>
  <div class="panel panel-default">
    <div class="panel-body">
      <h3><%= @post.title %></h3>

      <% if @post.picture.present? %>
      <%= image_tag @post.picture.url(:medium), class: 'uploaded-pic' %>
      <% end %><br>
    </div>
  </div>
</article>

<h1>Want to purchase this print?</h1>
<div class="payment-container">
<%= form_tag post_charge_path(@post) do %>
  <article>
    <label class="amount">
      <span>Amount: $<%= sprintf "%.2f", @post.price %></span>
    </label>
  </article>

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        data-key="<%= Rails.application.secrets.stripe_publishable_key %>"
        data-description="Payment for photo"
        data-amount="<%= (@post.price * 100).floor %>"></script>
<% end %>

